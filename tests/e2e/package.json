{
  "name": "alea-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-End tests for Alea project",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:full-flow": "jest full-flow.test.ts",
    "test:performance": "jest performance.test.ts",
    "test:errors": "jest error-scenarios.test.ts",
    "test:all": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "axios": "^1.3.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/e2e/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "**/tests/e2e/**/*.{ts,js}"
    ]
  }
}
